<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.technocracy.nit.raipur.kleos.aavartan.nitrr.treasurehunt.game.techfest.brainstorming.coms.kleos.questions.view.QuestionFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_extra_small"
        >

        <RelativeLayout
            android:id="@+id/unsolved_question_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_medium"
            android:background="@drawable/unsolved_question_layout"
            >

            <LinearLayout
                android:id="@+id/question_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small"
                android:background="@drawable/two_end_curved_layout"
                >
                <TextView
                    android:id="@+id/question_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question_name_layout"
                android:padding="@dimen/padding_small"
                android:background="@drawable/bluegreen_bordered_layout"
                >
                <TextView
                    android:id="@+id/question_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSizeSmall"
                    android:maxLines="3"
                    android:ellipsize="end"

                    />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/solved_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/unsolved_question_layout"
            android:padding="@dimen/padding_large"
            android:layout_marginTop="@dimen/padding_large"
            android:background="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_medium"
            android:text="@string/solved_questions"
            android:textColor="@color/white"
            android:visibility="gone"
            />

        <RelativeLayout
            android:id="@+id/recycler_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/solved_heading"
            android:padding="@dimen/padding_medium"
            android:visibility="gone"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/question_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"

                />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

</ScrollView>
